@{
    ViewData["Title"] = "By Developer";
}

<h2>By Developer - Total: @ViewData["ByDeveloperTotal"]</h2>

<div class="row">
    <div class="col-md-6">
        <h2>Developers</h2>
        <canvas id="byDeveloperChart"></canvas>
    </div>
    <div class="col-md-6">
        <h3>Description</h3>
        <div>
            <ul>
                <li>Developers: How many bugs completed per developer.</li>
                <li>Productivity: How many bugs completed for each developer per week.</li>
                <li>Quality: How many bugs completed but rejected for each developer per week.</li>
                <li>Efficency: Average hours per bug for each developer per week.</li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">        
        <h3>Productivity</h3>
        <h6>Bugs by Developer</h6>
        <canvas id="byDeveloperProductivityChart"></canvas>
    </div>
    <div class="col-md-4">
        <h3>Quality</h3>
        <h6>Rejected number</h6>
        <canvas id="byDeveloperQualityChart"></canvas>
    </div>
    <div class="col-md-4">
        <h3>Efficiency</h3>
        <h6>Hours per bug</h6>
        <canvas id="byDeveloperEfficencyChart"></canvas>
    </div>
</div>


<script>
   
     function createByDeveloperChart() {
        var ctx = document.getElementById('byDeveloperChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                datasets: [{
                    data: [@ViewData["ByDeveloperValues"]],
                    backgroundColor: [
                        'red',
                        'blue',
                        'green',
                        'black',
                    ],
                }],

                labels: [@Html.Raw(ViewData["ByDeveloperLabels"])]
            },
            options: {
                legend: {
                    position: 'right'
                },
                plugins: {
                    labels: {
                        render: 'value',
                        fontSize: 20,
                        fontColor: 'white'
                    }
                }
            }
        });
    }

    function createByDeveloperProductivityChart() {
        var ctx = document.getElementById('byDeveloperProductivityChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',

            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6', 'Week 7'],
                datasets: [{
                    label: 'Developer 1',
                   // backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'green',
                    data: [1, 2, 3, 5, 5, 6, 8]
                }, {
                    label: 'Developer 2',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'red',
                    data: [1, 3, 3, 5, 7, 10, 12]
                }, {
                    label: 'Developer 3',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'blue',
                    data: [1, 5, 3, 5, 7, 7, 9]
                }, {
                    label: 'Developer 4',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'yellow',
                    data: [0, 3, 7, 5, 7, 10, 16]
                },
                ]
            },

            // Configuration options go here
            options: {}
        });
    }

    function createByDeveloperQualityChart() {
        var ctx = document.getElementById('byDeveloperQualityChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',

            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6', 'Week 7'],
                datasets: [{
                    label: 'Developer 1',
                    // backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'green',
                    data: [1, 2, 3, 5, 5, 6, 8]
                }, {
                    label: 'Developer 2',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'red',
                    data: [1, 3, 3, 5, 7, 10, 12]
                }, {
                    label: 'Developer 3',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'blue',
                    data: [1, 5, 3, 5, 7, 7, 9]
                }, {
                    label: 'Developer 4',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'yellow',
                    data: [0, 3, 7, 5, 7, 10, 16]
                },
                ]
            },

            // Configuration options go here
            options: {}
        });
    }

    function createByDeveloperEfficiencyChart() {
        var ctx = document.getElementById('byDeveloperEfficiencyChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',

            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4', 'Week 5', 'Week 6', 'Week 7'],
                datasets: [{
                    label: 'Developer 1',
                    // backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'green',
                    data: [1, 2, 3, 5, 5, 6, 8]
                }, {
                    label: 'Developer 2',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'red',
                    data: [1, 3, 3, 5, 7, 10, 12]
                }, {
                    label: 'Developer 3',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'blue',
                    data: [1, 5, 3, 5, 7, 7, 9]
                }, {
                    label: 'Developer 4',
                    //backgroundColor: 'rgb(255, 99, 132)',
                    borderColor: 'yellow',
                    data: [0, 3, 7, 5, 7, 10, 16]
                },
                ]
            },

            // Configuration options go here
            options: {}
        });
    }

    createByDeveloperChart();
    createByDeveloperProductivityChart();
    createByDeveloperQualityChart();
    createByDeveloperEfficiencyChart();

</script>